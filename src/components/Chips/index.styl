@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.chips
  display flex
  flex-flow wrap

  &__item
    align-items center
    background-color $c-br-5
    border-radius 5px
    display flex
    margin 0 5px 5px 0

  &__label
    color $c-bg-700
    font-size 13px
    line-height 1
    padding 5px 5px 6px 10px

  &__remove
    border-radius 0 5px 5px 0
    align-items center
    color $c-bg-300
    cursor pointer
    display flex
    padding 5px 8px
    transition background-color 250ms cubic-bezier(0.4, 0, 0.2, 1), color 250ms cubic-bezier(0.4, 0, 0.2, 1)
    width 24px

    &:hover
      background-color $c-t-300
      color white

    & svg
      font-size 14px
