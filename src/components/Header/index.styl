@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.header
	align-items center
	background-color $c-t-200
	display flex
	height 50px
	justify-content space-between
	padding 0 20px
	position sticky
	top 0
	z-index 20

	&_static
		position static

	&_theme
		&_bg
			background-color transparent

	&__column
		&_left,
		&_right
			align-items center
			display flex

		&_left
			justify-content flex-start

		&_right
			justify-items flex-end

	&__column-group
		&_left
			margin-right 24px

		&_right
			margin-left 24px

	&__left-elements
		display flex
		align-items center

	&__title-page
		color white
		font-size 22px
		font-weight 500
		letter-spacing 1.2px

	&__logo
		background url('/images/logo_original.svg') no-repeat center center
		display block
		height 33px
		margin 0 auto 0
		width 200px

	&__project-btn
		& svg
			margin-left 10px
			transform rotate(0deg)

	&__account-link
		align-items center
		display flex
		cursor pointer
		padding 5px 0

		& svg
			color $c-t-100
			transform rotate(0deg)
			transition color 150ms ease-out

			&.open
				color white

	&_theme_bg &__account-link
		& svg
			color $c-sg-2

			&.open
				color $c-sg-1

	&__account-link-photo
		align-items flex-end
		border 2px solid $c-t-400
		border-radius 50%
		display flex
		height 40px
		justify-content center
		margin-right 5px
		overflow hidden
		width 40px

		& svg
			font-size 30px

		& img
			height 100%
			width 100%

	&_theme_bg &__account-name + &__account-link-photo
		border-color alpha($c-sg-2, 0.3)
		margin-left 10px

	&_theme_bg &__account-name
		color white
		font-size 14px
		font-weight 500
		user-select none

// Project Content-Plan
.pcp-header
	background-color white
	position relative

	&__navs
		margin-left -10px
		margin-right 14px

	&__nav
		color white
		height 40px
		padding 0
		width 40px

		&_next
			margin-left -4px

		&:hover
			background-color alpha(white, 0.08)

		&_prev > span:first-child
			margin-left -4px

		&_next > span:first-child
			margin-right -4px

		& svg
			font-size 40px
