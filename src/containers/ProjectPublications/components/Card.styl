@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.publication-card
	box-sizing content-box
	flex none
	margin-right 15px

	&:last-child
		margin-right 20px
	
	&_publication
		width 200px
	
	&_story
		width 112px
	
	&__wrap
		background-color black
		position relative
	//	transform translateZ(0)
	
	&__media
		height 200px
		position relative
	
	&_past &__media
		&:before
			bottom 0
			background-color alpha(black, 0.3)
			content ''
			left 0
			position absolute
			right 0
			top 0
			transform translateZ(0)
	
	&__badges
		pointer-events none
	
	&__badge-video-timer
		background-color alpha(black, 0.6)
		border-radius 11px
		bottom 8px
		color white
		font-size 12px
		right 8px
		opacity 0
		padding 5px 6px
		position absolute
		transition opacity 150ms ease-out
	
	&_video-playing&_single &__badge-video-timer,
	&_video-playing .slick-active &__badge-video-timer
		opacity 1
		transition opacity 150ms 500ms ease-out
	
	&__badge-media-type
		opacity 1
		padding-top 1px
		position absolute
		left 8px
		top 8px
		transition opacity 150ms ease-out
		transform translateZ(0)
		
		&:before
			background-color alpha(black, 0.3)
			box-shadow 0 0 10px 5px alpha(black, 0.3)
			border-radius 10px
			bottom 0
			content ''
			left 0
			margin auto
			position absolute
			right 0
			top 0
		
		& svg
			color white
			font-size 20px
			position relative
	
	&_video-playing&_single &__badge-media-type,
	&_video-playing .slick-active &__badge-media-type
		opacity 0
		transition opacity 150ms 500ms ease-out
	
	&__video,
	&__image
		border-radius 8px
		overflow hidden
	
	&__image
		height 100%
		overflow hidden
		width 100%
		
		& img
			max-width 100%
	
	&__content
		background-color white
		box-shadow 0 0 10px alpha(black, 0.2)
		bottom 0
		position absolute
		pointer-events none
		transform translateZ(0)
		transition transform 150ms ease-out
		width 100%
	
	&:not(&_past) &__wrap:hover &__content
		transform translateY(100%)
		transition transform 150ms 500ms ease-out
	
	&__slider-gallery-counter
		background-color alpha(black, 0.6)
		border-radius 11px
		color white
		font-size 12px
		padding 5px 6px
		position absolute
		pointer-events none
		right 8px
		top 8px
		z-index 1
	
	&__slider-gallery-arrow
		background none
		border none
		height 100%
		opacity 0
		position absolute
		top 0
		transition opacity 150ms ease-out
		z-index 1
		
		&_prev
			left 0
			padding-left 10px
		
		&_next
			padding-right 10px
			right 0
		
		& span
			display block
			position relative
			
			&:before
				background-color alpha(black, 0.25)
				box-shadow 0 0 0 0 alpha(black, 0.25)
				border-radius 10px
				bottom 0
				content ''
				left 0
				margin auto
				position absolute
				right 0
				top 0
				transition box-shadow 150ms ease-out
		
		& svg
			color white
			font-size 32px
			position relative
	
	&_past &__slider-gallery-arrow
		padding-bottom 44px
	
	&_publication &__slider-gallery-arrow
		padding-bottom 68px
		transition padding-bottom 150ms ease-out, opacity 150ms ease-out !important
	
	&_publication &__wrap:hover &__slider-gallery-arrow
		padding-bottom 0
		transition padding-bottom 150ms 500ms ease-out, opacity 150ms ease-out !important
	
	&__wrap:hover &__slider-gallery-arrow
		opacity 1
		transition opacity 150ms ease-out
		
		&_disabled
			opacity 0.3
			pointer-events none
		
		& span:before
			box-shadow 0 0 20px 10px alpha(black, 0.25)
	
	&__slider-gallery-item
		display block !important
		overflow hidden
		position relative
	
	&__content-wrap
		color $c-bg-600
		font-size 13px
		height 68px
		line-height 1.4
		padding 7px 10px
	
	&__reactions-wrap
		display flex
		justify-content space-between
		padding 13px 10px
	
	&_story &__reactions-wrap
		justify-content center
	
	&__reaction
		align-items center
		color $c-bg-500
		display flex
		font-size 14px
		font-weight 600
		
		& svg
			color $c-bg-200
			font-size 18px
			margin-right 7px
	
	// SOCIAL PROFILE
	&__profile
		align-items center
		display flex
		margin-bottom 12px
	
	&__profile-avatar
		margin-right 12px
		position relative
	
	&__profile-photo
		border-radius 50%
		height 34px
		overflow hidden
		width 34px
		
		& img
			height auto
			max-width 100%
		
		&_theme-color-1,
		&_theme-color-2,
		&_theme-color-3,
		&_theme-color-4,
		&_theme-color-5,
		&_theme-color-6
			border 2px solid transparent
			box-sizing content-box
			height 26px
			margin 2px
			width 26px
		
		&_theme-color-1
			box-shadow 0 0 0 2px $c-theme-1
		
		&_theme-color-2
			box-shadow 0 0 0 2px $c-theme-2
		
		&_theme-color-3
			box-shadow 0 0 0 2px $c-theme-3
		
		&_theme-color-4
			box-shadow 0 0 0 2px $c-theme-4
		
		&_theme-color-5
			box-shadow 0 0 0 2px $c-theme-5
		
		&_theme-color-6
			box-shadow 0 0 0 2px $c-theme-6
	
	&__profile-info
		max-width calc(100% - 46px)
	
	&__profile-name
		color $c-bg-600
		font-size 13px
		font-weight 600
		overflow hidden
		text-overflow ellipsis
		white-space nowrap
	
	&__profile-publication-date
		color $c-bg-400
		font-size 12px
		margin-top 7px
		
		& span
			font-weight 600
	
	&__social-network-profile
		align-items center
		border 2px solid $c-bg-50
		box-sizing content-box
		border-radius 50%
		color white
		display flex
		justify-content center
		height 14px
		left -2px
		position absolute
		top -2px
		width 14px
		
		&_vk
			background-color #4D7198
			
			& svg
				font-size 8px
				width 10px !important
		
		&_instagram
			background radial-gradient(circle farthest-corner at 35% 90%, #fec564, transparent 50%),
			radial-gradient(circle farthest-corner at 0 140%, #fec564, transparent 50%),
			radial-gradient(ellipse farthest-corner at 0 -25%, #5258cf, transparent 50%),
			radial-gradient(ellipse farthest-corner at 20% -50%, #5258cf, transparent 50%),
			radial-gradient(ellipse farthest-corner at 100% 0, #893dc2, transparent 50%),
			radial-gradient(ellipse farthest-corner at 60% -20%, #893dc2, transparent 50%),
			radial-gradient(ellipse farthest-corner at 100% 100%, #d9317a, transparent),
			linear-gradient(#6559ca, #bc318f 30%, #e33f5f 50%, #f77638 70%, #fec66d 100%)
			
			& svg
				font-size 10px
		
