@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.D-create-edit-product
	&__selling-price
		& input
			padding 0 !important

	&__add-specification
		& svg
			font-size 18px
			margin-right 10px

	&__specification-remove
		color $c-bg-200
		display block
		height 32px
		margin-left auto
		margin-top 2px
		padding 6px
		width 32px

		&:hover
			background-color alpha($c-bg-100, 0.2)

		& svg
			font-size 20px
