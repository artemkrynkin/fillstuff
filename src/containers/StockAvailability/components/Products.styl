@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.sa-products
  overflow hidden

  &__row-marker
    transition background-color 150ms cubic-bezier(0.4, 0, 0.2, 1)

    &:hover
      background-color $c-br-3

  &__product-actions-button,
  &__product-add-marker-button,
  &__marker-actions-button
    color $c-bg-200
    padding 8px
    width 36px

    &:hover
      background-color alpha($c-bg-100, 0.2)

    & svg
      font-size 20px

  &__product-actions-button,
  &__product-add-marker-button
    color $c-bg-300

  &__product-actions
    position absolute
    right 7px
    top 6px

  &__marker-actions
    opacity 0
    transition opacity 150ms cubic-bezier(0.4, 0, 0.2, 1)

  &__row-marker:hover &__marker-actions
    opacity 1

  &__quantity-indicator
    border-radius 100%
    display inline-block
    height 10px
    margin -1px 10px 0 0
    vertical-align middle
    width 10px

    &_red
      background-color $c-1

    &_yellow
      background-color $c-14

    &_green
      background-color $c-t-A700
