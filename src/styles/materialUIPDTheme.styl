.mui-btn-ct300
	background-color $c-t-300

	&:hover
		background-color $c-t-400

.mui-btn-ct400
	background-color $c-t-400

	&:hover
		background-color $c-t-500

.mui-btn-cwt400
	background-color white
	color $c-t-400

	&:hover
		background-color white
		color $c-t-500

.pd-formControlLabelRadioTitleSubtitle
	align-items flex-start

	&__label
		padding-top 10px

	&__title
		font-weight 500

	&__subtitle
		color $c-bg-400
		margin-top 5px

.pd-rowGridFormLabelControl
	margin-bottom 20px

	& > label
		margin-top 12px
		margin-right 10px

	& > label + div
		flex-grow 1

.pd-rowGridFormSubmit
	background-color $c-br-3
	border-radius 0 0 8px 8px
	margin 0 -15px -20px
	padding 10px 15px
	width auto

.pd-selectIcon
	color $c-bg-300
	display inline-block
	font-size 16px
	flex-shrink 0
	top calc(50% - 8px)
	right 10px
	user-select none
	position absolute
	pointer-events none

.pd-listing
	list-style disc
	padding-left 17px

	& li
		color currentColor
		font-size 14px
		margin-bottom 5px

		&:last-child
			margin-bottom 0
