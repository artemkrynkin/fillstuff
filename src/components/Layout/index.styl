@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.layout
	&_bg
		background linear-gradient(to bottom, $c-sg-3 0%, $c-sg-4 50%, $c-sg-4 100%)
		display flex
		flex-direction column
		min-height 100vh
		width 100%

		& .page__wrap
			margin 0 auto
			max-width 990px
			padding 5px 0 15px
			width 100%

.layout-auth
	padding-bottom 20px
	padding-top 30px

	& .page__inner-content
		margin 0 auto
		max-width 480px
		padding 30px 0 20px
		width 100%

	&__logo
		background url('/img/logo_original.svg') no-repeat center center
		height 33px
		margin 0 auto 0
		width 200px

	&__form
		background-color white
		border-radius 8px
		padding 20px 40px

		& h2
			color $c-bg-800
			font-weight 300
			line-height 1.2
			margin 0 auto 30px
			text-align center
			width 300px

	&__or
		position relative
		text-align center

		& hr
			bottom 0
			margin auto 0
			position absolute
			top 2px
			width 100%

	&__or-text
		background-color white
		color $c-bg-700
		display inline-block
		font-size 14px
		padding 0 10px
		position relative

	&__social-network-login
		margin-bottom 40px

	&__social-networks
		display flex
		justify-content space-between
		margin 0 auto
		max-width 280px

	&__social-networks-item
		align-items center
		border none
		border-radius 8px
		box-shadow 0 2px 5px 0 alpha(#4D7198, 0.25), 0 2px 2px 0 alpha(#4D7198, 0.14), 0 3px 1px -2px alpha(#4D7198, 0.12)
		color white
		display flex
		font-size 14px
		font-weight 600
		height 36px
		justify-content center
		line-height 1.2
		padding 6px 16px
		position relative
		transition background-color 250ms cubic-bezier(0.4, 0, 0.2, 1), box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1)
		width 100%

		&:hover
			&:before
				opacity 1

		&:active
			box-shadow 0 5px 5px -3px alpha(#4D7198, 0.25), 0 8px 10px 1px alpha(#4D7198, 0.14), 0 3px 14px 2px alpha(#4D7198, 0.12)

		&_vk
			background-color #4D7198

			& svg
				font-size 22px
				margin-right 10px

		//&_instagram
		//	background radial-gradient(circle farthest-corner at 35% 90%, #fec564, transparent 50%),
		//	radial-gradient(circle farthest-corner at 0 140%, #fec564, transparent 50%),
		//	radial-gradient(ellipse farthest-corner at 0 -25%, #5258cf, transparent 50%),
		//	radial-gradient(ellipse farthest-corner at 20% -50%, #5258cf, transparent 50%),
		//	radial-gradient(ellipse farthest-corner at 100% 0, #893dc2, transparent 50%),
		//	radial-gradient(ellipse farthest-corner at 60% -20%, #893dc2, transparent 50%),
		//	radial-gradient(ellipse farthest-corner at 100% 100%, #d9317a, transparent),
		//	linear-gradient(#6559ca, #bc318f 30%, #e33f5f 50%, #f77638 70%, #fec66d 100%)
		//
		//	& svg
		//		font-size 26px

		//&_facebook
		//	background-color #3B5998
		//
		//	& svg
		//		font-size 20px

		&:before
			background-color alpha(black, 0.1)
			border-radius 8px
			content ''
			height 100%
			opacity 0
			position absolute
			transition opacity 250ms cubic-bezier(0.4, 0, 0.2, 1)
			width 100%

		& svg
			position relative
			z-index 1

	&__form-fields
		margin-top 40px

	&__login-btn
		width 100%

	&__bottom-form-info,
	&__bottom-info
		font-size 14px
		line-height 1.4
		margin-top 20px
		text-align center

	&__bottom-form-info
		color $c-bg-400

		& a
			font-size 14px

	&__bottom-info
		color white

		& a
			color white
			font-weight 600
			text-decoration underline

			&:hover
				opacity 0.8

	&__code-of-conduct,
	&__copyright
		color $c-sg-2
		font-size 14px
		line-height 1.4
		margin-top auto
		text-align center

	&__code-of-conduct
		& a
			color $c-t-A200
			font-weight 600

			&:hover
				color alpha($c-t-A200, 0.8)

	&__copyright
		font-weight 600
