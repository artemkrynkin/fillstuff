@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.sa-products
	&__actions
		color $c-bg-200
		margin-left auto
		padding 8px

		&:hover
			background-color alpha($c-bg-100, 0.2)

		& svg
			font-size 20px

	&__quantity-indicator
		border-radius 100%
		display inline-block
		height 10px
		margin -1px 10px 0 0
		vertical-align middle
		width 10px

		&_red
			background-color $c-1

		&_yellow
			background-color $c-14

		&_green
			background-color #3bc935
