@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.project-publications-filter
	background-color $c-bg-50
	box-shadow 0 2px 10px alpha(black, 0.15), 0 1px 0 alpha($c-bg-100, 0.5)
	display flex
	padding 15px 20px
	position sticky
	top 50px
	z-index 10
	
	&__add-social-profile,
	&__remove-social-profile
		height 40px
		padding 0
		transition background-color 0.15s cubic-bezier(0.4, 0, 0.2, 1) 0s
		width 40px
	
	&__add-social-profile
		border 1px solid $c-t-200
		color $c-t-200
		
		&:hover
			background-color alpha($c-t-100, 0.2)
		
		& svg
			fill $c-t-200
			font-size 24px
	
	&__remove-social-profile
		border 1px solid $c-bg-100
		color $c-bg-200
		margin-left 10px
		
		&:hover
			background-color alpha($c-bg-100, 0.2)
		
		& svg
			font-size 18px
	
	&__profiles-wrap
		display flex
		margin-left 25px
	
	&__profile
		margin-right 10px
		position relative
	
	&__profile-photo
		border-radius 50%
		height 40px
		overflow hidden
		width 40px
		
		& img
			height auto
			max-width 100%
	
	&__social-network-profile
		align-items center
		border 2px solid $c-bg-50
		box-sizing content-box
		border-radius 50%
		color white
		display flex
		justify-content center
		height 14px
		left -2px
		position absolute
		top -2px
		width 14px
		
		&_vk
			background-color #4D7198
			
			& svg
				font-size 8px
				width 10px !important
		
		&_instagram
			background radial-gradient(circle farthest-corner at 35% 90%, #fec564, transparent 50%),
			radial-gradient(circle farthest-corner at 0 140%, #fec564, transparent 50%),
			radial-gradient(ellipse farthest-corner at 0 -25%, #5258cf, transparent 50%),
			radial-gradient(ellipse farthest-corner at 20% -50%, #5258cf, transparent 50%),
			radial-gradient(ellipse farthest-corner at 100% 0, #893dc2, transparent 50%),
			radial-gradient(ellipse farthest-corner at 60% -20%, #893dc2, transparent 50%),
			radial-gradient(ellipse farthest-corner at 100% 100%, #d9317a, transparent),
			linear-gradient(#6559ca, #bc318f 30%, #e33f5f 50%, #f77638 70%, #fec66d 100%)
			
			& svg
				font-size 10px
		
