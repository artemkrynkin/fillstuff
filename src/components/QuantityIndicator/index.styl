@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.quantity-indicator
  &__quantity-packages
    color $c-bg-300
    font-size 11px
    font-weight 600
    margin-left 5px

  &__circle
    border-radius 100%
    display inline-block
    height 10px
    margin -1px 0 0 5px
    vertical-align middle
    width 10px

    &_red
      background-color $c-1

    &_yellow
      background-color $c-14

    &_green
      background-color $c-t-A700

  [aria-expanded] &_disappearing &__circle
    transition transform 150ms cubic-bezier(0.4, 0, 0.2, 1)

  [aria-expanded="true"] &_disappearing &__circle
    transform scale(0)
