@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.ps-social-pages
	&__list
		margin -20px 0

	&__page-item
		align-items center
		border-bottom 1px solid $c-br-5
		display flex
		padding 10px 0

		&:last-child
			border-bottom none

	&__page-social
		position relative

	&__page-social-photo
		border-radius 50%
		height 40px
		overflow hidden
		width 40px

		& img
			height auto
			max-width 100%

	&__social-network
		align-items center
		border 2px solid white
		box-sizing content-box
		border-radius 50%
		color white
		display flex
		justify-content center
		height 16px
		left -2px
		position absolute
		top -2px
		width 16px

		&_vk
			background-color #4D7198

			& svg
				font-size 10px
				width 10px !important

		&_instagram
			background radial-gradient(circle farthest-corner at 35% 90%, #fec564, transparent 50%),
			radial-gradient(circle farthest-corner at 0 140%, #fec564, transparent 50%),
			radial-gradient(ellipse farthest-corner at 0 -25%, #5258cf, transparent 50%),
			radial-gradient(ellipse farthest-corner at 20% -50%, #5258cf, transparent 50%),
			radial-gradient(ellipse farthest-corner at 100% 0, #893dc2, transparent 50%),
			radial-gradient(ellipse farthest-corner at 60% -20%, #893dc2, transparent 50%),
			radial-gradient(ellipse farthest-corner at 100% 100%, #d9317a, transparent),
			linear-gradient(#6559ca, #bc318f 30%, #e33f5f 50%, #f77638 70%, #fec66d 100%)

			& svg
				font-size 12px

	&__page-details
		font-size 14px
		padding 0 10px

	&__page-title
		color $c-bg-600
		display inline-flex
		font-weight 600
		line-height 1.2

		&:hover
			text-decoration underline

	&__page-actions
		flex none
		margin-left auto

	&__page-action-sync,
	&__page-action-disconnect
		color $c-bg-200
		min-height 40px
		padding 8px

		&:hover
			background-color alpha($c-bg-100, 0.2)

		& svg
			width 24px !important

	&__page-action-sync
		& svg
			font-size 18px
			margin 3px 0

		& svg[data-icon='check']
			color $c-t-300
			transition margin-top 150ms ease-out
			margin-top -21px

		&_synchronized svg[data-icon='sync-alt']
			color $c-t-300

		&_synced svg[data-icon='check']
			margin-top 3px

	&__page-action-sync-icons
		align-items center
		display flex
		flex-direction column
		overflow hidden
		height 24px
		width 24px

	&__page-action-disconnect
		& svg
			font-size 24px

	&__authenticate-social
		text-align center

	&__list-social-networks
		display flex
		justify-content center

	&__social-network-item
		align-items center
		border none
		border-radius 50%
		box-shadow 0 2px 5px 0 alpha(#4D7198, 0.25), 0 2px 2px 0 alpha(#4D7198, 0.14), 0 3px 1px -2px alpha(#4D7198, 0.12)
		color white
		display flex
		font-size 14px
		font-weight 600
		height 50px
		justify-content center
		line-height 1.2
		margin 0 50px
		padding 6px 16px
		position relative
		transition background-color 250ms cubic-bezier(0.4, 0, 0.2, 1), box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1)
		width 50px

		&:hover
			&:before
				opacity 1

		&:active
			box-shadow 0 5px 5px -3px alpha(#4D7198, 0.25), 0 8px 10px 1px alpha(#4D7198, 0.14), 0 3px 14px 2px alpha(#4D7198, 0.12)

		&_vk
			background-color #4D7198

			& svg
				font-size 28px

		&_instagram
			background radial-gradient(circle farthest-corner at 35% 90%, #fec564, transparent 50%),
			radial-gradient(circle farthest-corner at 0 140%, #fec564, transparent 50%),
			radial-gradient(ellipse farthest-corner at 0 -25%, #5258cf, transparent 50%),
			radial-gradient(ellipse farthest-corner at 20% -50%, #5258cf, transparent 50%),
			radial-gradient(ellipse farthest-corner at 100% 0, #893dc2, transparent 50%),
			radial-gradient(ellipse farthest-corner at 60% -20%, #893dc2, transparent 50%),
			radial-gradient(ellipse farthest-corner at 100% 100%, #d9317a, transparent),
			linear-gradient(#6559ca, #bc318f 30%, #e33f5f 50%, #f77638 70%, #fec66d 100%)

			& svg
				font-size 32px
