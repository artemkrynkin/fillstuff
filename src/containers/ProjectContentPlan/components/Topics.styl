@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.pcp-topics
	align-items center
	background-color white
	display flex
	height 50px
	padding 0 20px

	&__aside
		flex none

	&__title,
	&__selected-remove
		color $c-bg-400
		font-size 13px
		font-weight 500
		width 105px

	&__selected-remove
		align-items center
		background none
		border none
		display flex
		height 50px
		margin-right 30px
		width 75px

		& svg
			color $c-bg-200
			font-size 16px
			margin 1px 0 0 4px
			transition color 150ms ease-out

		&:hover
			& svg
				color $c-bg-300

	&__items
		flex 1 1 auto
		margin 0 15px 0 0
		width 0

		& .slider-scroller__wrap-content
			display flex
			padding 4px 15px

		& .slider-scroller__arrow
			align-items center
			background-color white
			border-radius 50%
			box-shadow 0 0 5px alpha(black, 0.5)
			cursor pointer
			display flex
			justify-content center
			height 32px
			opacity 0
			position absolute
			pointer-events none
			top -2px
			transition opacity 200ms ease-out
			user-select none
			width 32px
			z-index 5

			&_left
				left 5px

				& svg
					margin-left -1px

			&_right
				right 5px

				& svg
					margin-left 1px

			& svg
				color $c-bg-500
				font-size 26px
				position absolute

		&.slider-scroller_scroll-both .slider-scroller__arrow_left,
		&.slider-scroller_scroll-both .slider-scroller__arrow_right,
		&.slider-scroller_scroll-left .slider-scroller__arrow_left,
		&.slider-scroller_scroll-right .slider-scroller__arrow_right
			opacity 1

			&:hover
				transition transform 100ms ease-out
				transform scale(1.1)

			&:active
				transform scale(1)

		&.slider-scroller_scroll-left .slider-scroller__arrow_left,
		&.slider-scroller_scroll-right .slider-scroller__arrow_right,
		&.slider-scroller_scroll-both .slider-scroller__arrow_left,
		&.slider-scroller_scroll-both .slider-scroller__arrow_right
			pointer-events auto

		& .slider-scroller__arrow-shadow
			background-size 0 100%
			background-repeat no-repeat
			height 100%
			position absolute
			pointer-events none
			top 0
			transition background-size 200ms ease-out
			width 50px
			z-index 4

			&_direction_left
				background-image linear-gradient(-270deg, white 0, alpha(white, 0) 100%)
				background-position-x left
				left -1px

			&_direction_right
				background-image linear-gradient(-270deg, alpha(white, 0) 0, white 100%)
				background-position-x right
				right -1px

		&.slider-scroller_scroll-both .slider-scroller__arrow-shadow,
		&.slider-scroller_scroll-left .slider-scroller__arrow-shadow_direction_left,
		&.slider-scroller_scroll-right .slider-scroller__arrow-shadow_direction_right
			background-size 100% 100%

	&__item
		background none
		border none
		margin-right 25px
		transition opacity 150ms 75ms ease-out
		white-space nowrap

		&:last-child
			margin-right 0

	&:not(&_editing) &__item
		cursor default

	&_editing &__item
		opacity 0.6

		&_selected
			opacity 1

	&__item-wrap
		padding 4px
		position relative

	&__item-color
		border-radius 4px
		bottom 0
		content ''
		height 4px
		left 0
		position absolute
		transition height 150ms 75ms ease-out, transform 150ms ease-out
		transform translateY(4px)
		width 100%

	&_editing &__item-color
		height 100%
		transform translateY(0)

	&__item-name
		font-size 13px
		font-weight 500
		line-height 1
		position relative
		transition color 150ms 75ms ease-out

	&:not(&_editing) &__item-name
		color $c-bg-600 !important

	&_editing &__item-name
		color white

	&__actions
		flex none
		margin-left auto
