@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.sa-products
  &__table-header-sticky
    & th
      background-color white
      border-bottom-color transparent
      box-shadow 0 1px 0 0 $c-br-5
      position sticky
      top 50px
      z-index 1

      &:first-child
        border-radius 8px 0 0 0

      &:last-child
        border-radius 0 8px 0 0

  &__product-name
    color $c-bg-600
    font-weight 800

  &__markers-count
    color $c-bg-300
    font-size 11px
    font-weight 600
    margin-left 5px

  &__row-marker
    transition background-color 150ms cubic-bezier(0.4, 0, 0.2, 1)

    &:hover
      background-color $c-br-3

  &__product-actions-button,
  &__product-add-marker-button,
  &__marker-actions-button
    color $c-bg-200
    padding 8px
    width 36px

    &:hover
      background-color alpha($c-bg-100, 0.2)

    & svg
      font-size 20px

  &__product-actions-button,
  &__product-add-marker-button
    color $c-bg-300

  &__product-add-marker-button
    opacity 0
    transition opacity 150ms cubic-bezier(0.4, 0, 0.2, 1)

  &__product-actions
    position absolute
    right 7px
    top 6px

  &__marker-actions
    opacity 0
    transition opacity 150ms cubic-bezier(0.4, 0, 0.2, 1)

  &__row-product:hover &__product-add-marker-button
    opacity 1

  &__row-marker:hover &__marker-actions
    opacity 1
