@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.publications-plan
	&__day
		margin-bottom 48px
	
	&__day-header
		align-items baseline
		display flex
		margin-bottom 27px
	
	&__day_past &__day-header
		margin-bottom 17px
	
	&__day-header-date
		color $c-bg-500
		font-size 18px
		font-weight 600
		text-transform uppercase
	
	&__day-header-day-week
		color $c-bg-400
		font-size 14px
		margin-left 15px
		text-transform lowercase
	
	&__feed
		align-items flex-end
		display flex
		flex-wrap nowrap
		
		&_not-empty
			margin-top -45px
	
	&__day_past &__feed
		margin-left -10px
	
	&__feed-scroller
		flex 1 1 auto
		width calc(100% - 442px)
		
		& .slider-scroller__wrap-content
			display flex
			padding 0 0 4px 10px
		
		& .slider-scroller__arrow
			align-items center
			background-color white
			border-radius 50%
			box-shadow 0 0 5px alpha(black, 0.5)
			cursor pointer
			display flex
			justify-content center
			height 40px
			opacity 0
			margin -5px 0 -5px 0
			//padding 5px 0 5px 0
			position absolute
			top 50%
			transition opacity 200ms ease-out
			user-select none
			z-index 5
			width 40px

			&_left
				left 5px
				//margin-left -5px
				//padding-left 5px
				
				& svg
					margin-left -1px
			
			&_right
				//margin-right -5px
				//padding-right 5px
				right 5px
				
				& svg
					margin-left 1px
			
			& svg
				color $c-bg-500
				font-size 30px
				position absolute
		
		&.slider-scroller_scroll-both .slider-scroller__arrow_left,
		&.slider-scroller_scroll-both .slider-scroller__arrow_right,
		&.slider-scroller_scroll-left .slider-scroller__arrow_left,
		&.slider-scroller_scroll-right .slider-scroller__arrow_right
			opacity 1

			&:hover
				transition transform 100ms ease-out
				transform scale(1.1)

			&:active
				transform scale(1)

		&.slider-scroller_scroll-right .slider-scroller__arrow_left,
		&.slider-scroller_scroll-left .slider-scroller__arrow_right
			pointer-events none

		& .slider-scroller__arrow-shadow
			background-size 0 100%
			background-repeat no-repeat
			height 100%
			position absolute
			pointer-events none
			top 0
			transition background-size 200ms ease-out
			width 50px
			z-index 4
			
			&_direction_left
				background-image linear-gradient(-270deg, $c-bg-50 0, alpha($c-bg-50, 0) 100%)
				background-position-x left
				left -1px
			
			&_direction_right
				background-image linear-gradient(-270deg, alpha($c-bg-50, 0) 0, $c-bg-50 100%)
				background-position-x right
				right -1px
		
		&.slider-scroller_scroll-both .slider-scroller__arrow-shadow,
		&.slider-scroller_scroll-left .slider-scroller__arrow-shadow_direction_left,
		&.slider-scroller_scroll-right .slider-scroller__arrow-shadow_direction_right
			background-size 100% 100%

	// ADD CARD
	&__add-card
		align-items center
		border 2px dashed $c-t-200
		border-radius 8px
		display flex
		color $c-t-300
		cursor pointer
		flex-direction column
		flex none
		font-size 14px
		font-weight 500
		justify-content center
		height 200px
		margin 0 15px 4px 0
		transition background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
		text-align center
		text-transform uppercase
		line-height 1.4
		
		&:hover
			background-color alpha($c-t-100, 0.2)
		
		&_publication
			width 200px
		
		&_story
			width 112px
		
		& svg
			color $c-t-200
			font-size 32px
			margin-bottom 6px
