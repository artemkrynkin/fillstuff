@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.us-social-network-accounts
	&__item
		align-items center
		display flex

	&__icon
		align-items center
		background-color #4D7198
		border-radius 50%
		color white
		display flex
		justify-content center
		margin-right 24px
		height 40px
		width 40px

		& svg
			font-size 22px

	&__name
		font-size 14px

	&__actions
		display flex
		margin-left auto
