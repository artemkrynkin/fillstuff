@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.swo-members
  position sticky
  top 50px

  &__show-all-link
    font-size 14px
    margin-right -15px
    padding 19px 15px 18px 0

    &_active
      color $c-bg-300

  &__list
    margin -19px 0 -20px

  &__item
    align-items center
    display flex
    position relative

  &__link
    border-bottom 1px solid $c-bg-50
    align-items center
    display flex
    min-height 42px
    margin 0 -15px
    padding 8px 15px
    transition background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
    width calc(100% + 30px)

    &:hover
      background-color $c-br-1

    &_active
      background-color $c-br-1

      &:before
        background-color $c-t-300
        content ''
        height 100%
        left -15px
        position absolute
        width 3px

  &__member-photo
    align-items flex-end
    border-radius 50%
    display flex
    flex none
    height 32px
    justify-content center
    margin-right 15px
    overflow hidden
    width 32px

    &_null
      background-color $c-br-5
      border 2px solid $c-bg-100

      & svg
        color alpha(white, 0.9)
        font-size 24px

    & img
      height 100%
      width 100%

  &__name
    color $c-bg-600
    font-size 14px
    font-weight 600
    max-width 100%
    overflow hidden
    padding 5px 10px 5px 0
    text-overflow ellipsis
    white-space nowrap
