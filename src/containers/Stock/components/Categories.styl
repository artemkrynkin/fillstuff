@import '~src/styles/helpers/_colors.styl';
@import '~src/styles/helpers/_fonts.styl';
@import '~src/styles/helpers/_media_queries.styl';

.sp-categories
	&__add-category
		padding 6px

		& svg
			font-size 20px
			width 20px !important

	&__list
		margin -19px 0 -20px

	&__item
		align-items center
		display flex
		position relative

	&__link
		align-items center
		display flex
		min-height 42px
		margin 0 -15px
		padding 5px 15px
		transition background-color 150ms cubic-bezier(0.4, 0, 0.2, 1) 0ms
		width calc(100% + 30px)

		&:hover
			background-color $c-br-3

		&_active
			background-color alpha($c-br-3, 1) !important

			&:before
				background-color $c-t-300
				content ''
				height 100%
				left -15px
				position absolute
				width 3px

	&__color
		border-radius 50%
		flex none
		height 18px
		width 18px

	&__name
		color $c-bg-600
		font-size 14px
		max-width 100%
		overflow hidden
		padding 0 10px
		text-overflow ellipsis
		white-space nowrap

	&__actions
		color $c-bg-200
		position absolute
		padding 6px
		right 0

		&:hover
			background-color alpha($c-bg-100, 0.2)

		& svg
			font-size 20px

.sp-categories-dialog
	&__colors-list
		margin 10px 0 -10px

		@media (min-width: 496px)
			justify-content space-between

	&__color-label
		cursor pointer
		height 24px
		margin 0 10px 10px 0
		width 24px

		@media (min-width: 496px)
			margin-right 16px

			&:nth-child(9),
			&:nth-child(18)
				margin-right 0

		& input
			display none

	&__color
		align-items center
		border-radius 50%
		color white
		display flex
		height 100%
		justify-content center
		width 100%

		& svg
			display none
			font-size 16px

	&__color-label input:checked + &__color
		& svg
			display block
